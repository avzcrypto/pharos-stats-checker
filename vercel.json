{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "*.{html,webp,png,jpg,jpeg,gif,svg,ico,css,js}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*\\.(webp|png|jpg|jpeg|gif|svg|ico|css|js))",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/top",
      "dest": "/top.html"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*\\.html)",
      "dest": "/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/refresh-leaderboard",
      "schedule": "0 0 * * *"
    }
  ]
}
